<%= form_for(@recipe) do |f| %>

    <% if @recipe.errors.any? %>
      <% @recipe.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert">
          <%= message %>
        </div>
      <% end %>
    <% end %>

<div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :title, { class: 'col-form-label' } %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, { class: 'form-control' } %>
    </div>
</div>


<div class="form-group row">
  <div class="col-sm-2">
     <%= f.label :ingredients, { class: 'col-form-label' } %>
  </div>

  <div class="col-sm-10">
     <%= f.text_field :ingredients, { class: 'form-control' } %>
  </div>
</div>


<div class="form-group row">
   <div class="col-sm-2">
      <%= f.label :body, { class: 'col-form-label' } %>
   </div>

   <div class="col-sm-10">
      <%= f.text_field :body, { class: 'form-control' } %>
   </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
     <%= f.label :recipe_image, { class: 'col-form-label' } %>
  </div>

  <div class="col-sm-10">
     <%= f.file_field :recipe_image, { class: 'form-control-file' }  %>
     <% if @recipe.recipe_image.attached? %>
        <hr/>
        <%= image_tag @recipe.recipe_image.variant(resize: "400x400") %>
     <% end %>
  </div>
</div>

<div class="form-group row">
    <div class="col-sm-12">
      <%= f.submit class: 'btn btn-primary float-right' %>
    </div>
</div>
<% end %>